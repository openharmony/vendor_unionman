    configs += [ ":soft_jemalloc" ]
  }

  source_set("soft_musl_src_ld128") {
    sources = []
    if (musl_arch == "x86_64") {
      sources += [
        "src/math/exp2l.c",
        "src/math/fabsl.c",
        "src/math/floorl.c",
        "src/math/sqrtl.c",
