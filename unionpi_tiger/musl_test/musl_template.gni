    sources = [ _libc_shared_so ]
    if (is_asan || is_tsan) {
      asan = "-asan"
    } else {
      asan = ""
    }
    _muls_linker_so = "${root_out_dir}/common/common/libc/${_libs_path_prefix}/ld-musl-${musl_arch}${asan}.so.1"
    outputs = [ _muls_linker_so ]
  }
