    configs -= musl_inherited_configs
    configs += [
      "//build/config/components/musl:soft_musl_config",
      ":gwp_asan_config_shared",
    ]
    cflags = [
      "-mllvm",
      "-instcombine-max-iterations=0",
      "-ffp-contract=fast",
      "-O3",
      "-fPIC",
      "-fstack-protector-strong",
    ]

    deps = porting_deps
    external_deps = [ "FreeBSD:ld128_static" ]
  }

